{
  "manifest_version": 3,
  "name": "Phishing Detection Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "description": "Detects phishing sites using WHOIS and risk analysis",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": []
}